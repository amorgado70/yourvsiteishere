<?xml version="1.0" encoding="UTF-8" ?>
<widget id="io.github.amorgado70.yourvsiteishere" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">

    <name>IPM 2016 - RV Site Locator V9</name>

    <description>
        IPM 2016 - RV Site Locator
    </description>
    <content src="www/index.html" />
    <author href="https://github.com/amorgado70/yourvsiteishere" email="alfredo.mor9ado@gmail.com">
        Alfredo Morgado, Kangryong Choi and Md Abdus Sadeque Assignment 2 PROG8110 Winter 2016
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="3.7.0" />
    <plugin name="org.apache.cordova.inappbrowser" />
    <allow-navigation href="https://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />

        <!-- Default application icon -->
        <icon src="img/logo.png" />
        <!--
            Default icon should work, but cordova don't overwrite
            the default on all densities
        -->
        <icon src="img/logo.png" platform="android" density="ldpi" />
        <icon src="img/logo.png" platform="android" density="mdpi" />
        <icon src="img/logo.png" platform="android" density="hdpi" />
        <icon src="img/logo.png" platform="android" density="xhdpi" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="img/logo.png"/>
</widget>
