<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.amorgado70.paultheoctopus" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>IPM 2016</name>
    <description>
        IPM 2016
    </description>
    <author email="alfredo.mor9ado@gmail.com" href="https://github.com.amorgado70">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="3.7.0" />
    <plugin name="org.apache.cordova.inappbrowser" />
    <allow-navigation href="https://*/*" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />

    <platform name="android">
        <allow-intent href="market:*" />

        <!-- Default application icon -->
        <icon src="www/img/logo.png" />
        <!--
            Default icon should work, but cordova don't overwrite
            the default on all densities
        -->
        <icon src="www/img/logo.png" platform="android" density="ldpi" />
        <icon src="www/img/logo.png" platform="android" density="mdpi" />
        <icon src="www/img/logo.png" platform="android" density="hdpi" />
        <icon src="www/img/logo.png" platform="android" density="xhdpi" />

    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="icon.png"/>
</widget>
